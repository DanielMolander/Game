<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/view_question_card_first_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="94dp"/>

    <TextView
        android:id="@+id/view_question_card_operation_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="94dp"
        android:text="+"/>

    <TextView
        android:id="@+id/view_question_card_second_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="94dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="94dp"
        android:maxLines="1"
        android:text="-----"/>

    <EditText
        android:id="@+id/view_question_card_input_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="94dp"
        android:inputType="number"
        android:maxLines="1"/>

    <Button
        android:id="@+id/view_question_card_done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="94dp"
        android:text="Done"
        android:maxLines="1" />

</LinearLayout>
