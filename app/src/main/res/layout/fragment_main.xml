<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/fragment_main_add_gold_button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:text="+/-" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_main_gold_label_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gold: "
            android:textSize="24sp" />

        <TextView
            android:id="@+id/fragment_main_gold_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_main_upgrade_container"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:visibility="gone"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:layout_above="@+id/fragment_main_action_button_container">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upgrades!"/>
        <Button
            android:id="@+id/fragment_main_upgrade_water_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="water system"/>

    </LinearLayout>

    <LinearLayout
        android:id="@id/fragment_main_action_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:gravity="bottom">

        <Button
            android:id="@+id/fragment_main_action_button_1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="2" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="4" />

    </LinearLayout>

</RelativeLayout>
